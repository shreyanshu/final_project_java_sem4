<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.shreyansh.servlets.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>listLaptopServlet</servlet-name>
        <servlet-class>com.shreyansh.servlets.ListLaptopServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>listLaptopServlet</servlet-name>
        <url-pattern>/listLaptops</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.shreyansh.servlets.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteLaptopServlet</servlet-name>
        <servlet-class>com.shreyansh.servlets.DeleteLaptopServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>deleteLaptopServlet</servlet-name>
        <url-pattern>/deleteLaptop</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>userFormServlet</servlet-name>
        <servlet-class>com.shreyansh.servlets.UserFormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userFormServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addUserServlet</servlet-name>
        <servlet-class>com.shreyansh.servlets.AddUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addUserServlet</servlet-name>
        <url-pattern>/createUser</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>addLaptopServlet</servlet-name>
        <servlet-class>com.shreyansh.servlets.AddLaptopServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>addLaptopServlet</servlet-name>
        <url-pattern>/createLaptop</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>listUserServlet</servlet-name>
        <servlet-class>com.shreyansh.servlets.ListUserServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>listUserServlet</servlet-name>
        <url-pattern>/listUsers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>com.shreyansh.servlets.DeleteUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>laptopForm</servlet-name>
        <servlet-class>com.shreyansh.servlets.LaptopFormServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>laptopForm</servlet-name>
        <url-pattern>/addLaptop</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editUserForm</servlet-name>
        <servlet-class>com.shreyansh.servlets.EditUserFormServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>editUserForm</servlet-name>
        <url-pattern>/editUserForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editUser</servlet-name>
        <servlet-class>com.shreyansh.servlets.EditUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>editUser</servlet-name>
        <url-pattern>/editUser</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>editLaptopForm</servlet-name>
        <servlet-class>com.shreyansh.servlets.EditLaptopFormServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>editLaptopForm</servlet-name>
        <url-pattern>/editLaptopForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editLaptop</servlet-name>
        <servlet-class>com.shreyansh.servlets.EditLaptopServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>editLaptop</servlet-name>
        <url-pattern>/editLaptop</url-pattern>
    </servlet-mapping>
</web-app>